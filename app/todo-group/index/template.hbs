<div class="section">
  <div class="container">
    <div class="content">
      <h2 class="page-title">Categories</h2>
      {{#link-to "todo-group.new" class="new-btn" }}Add a Todo{{/link-to}}

      <div class="todo-group">
        {{#each model as |todoGroup|}}
          <div class="collection__item">
            {{!-- <h3 class="todo-group__title"></h3> --}}
            <div class="box">
              <h4 class="todo-group__title">
                {{todoGroup.verb}}
              </h4>
            </div>
            <div class="button-container">
              <button class="button delete delete-todo" data-id="{{todo-group.id}}" {{action "destroy" todoGroup}}>Delete</button>
            {{#link-to "todo-group.detail" todoGroup.id class="edit-todo"}}Edit{{/link-to}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

{{outlet}}
