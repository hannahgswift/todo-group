<div class="section">
  <div class="container">
    <div class="content">
      <div class="page-header">
        <h2 class="page-title">Categories</h2>
      </div>
      <div class="todo-group__list">
        <div class="todo-group">
          {{#each model as |todoGroup|}}
            <div class="collection__item">
              <div class="box">
                {{#link-to "todo-group.edit" todoGroup class="todo-group__title nav__item"}}
                  {{todoGroup.verb}}
                {{/link-to}}
              </div>
              <div class="button-container">
                <button class="button delete delete-btn" data-id="{{todo-group.id}}" {{action "destroy" todoGroup}}><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                {{#link-to "todo-group.edit" todoGroup.id class="edit-btn" }}<i class="fa fa-pencil" aria-hidden="true"></i>{{/link-to}}
              </div>
            </div>
          {{/each}}
        </div>
        {{#link-to "todo-group.new" class="new-btn nav__item nav__item--new-link"}}Add New List{{/link-to}}
      </div>
    </div>
  </div>
</div>

{{outlet}}
